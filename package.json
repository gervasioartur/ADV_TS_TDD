{
    "name": "advanced_node",
    "version": "1.2.0",
    "main": "index.js",
    "author": "gervasioartur <gervasioartur@outlook.com.br>",
    "license": "MIT",
    "scripts": {
        "build": "rimraf dist && tsc",
        "start": "node dist/main/server.js",
        "debug": "nodemon -L --watch ./dist  ./dist/main/server.js",
        "up": "yarn build && docker-compose up ",
        "down": "docker-compose down",
        "test": "jest --passWithNoTests --silent --runInBand --watch --no-cache",
        "test:verbose": "jest --passWithNoTests --runInBand  --watch",
        "test:unit": "yarn test -- --watch -c jest-unit-config.js",
        "test:integration": "yarn test -- --watch -c jest-integration-config.js",
        "test:staged": "jest --passWithNoTests --silent --runInBand --no-cache",
        "test:coveralls": "yarn test:ci && coveralls < coverage/lcov.info",
        "test:ci": "jest --passWithNoTests --silent --runInBand --no-cache  --coverage ",
        "prepare": "husky install",
        "style:fix": "lint-staged"
    },
    "engines": {
        "node": "16.x"
    },
    "devDependencies": {
        "@shelf/jest-mongodb": "^3.0.1",
        "@types/bcrypt": "^5.0.0",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.5.1",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/module-alias": "^2.0.1",
        "@types/node": "^17.0.37",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "coveralls": "^3.1.1",
        "eslint": "^7.32.0",
        "eslint-config-standard-with-typescript": "^21.0.1",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^5.2.0",
        "git-commit-msg-linter": "^4.1.3",
        "husky": "^8.0.0",
        "jest": "^27.5.1",
        "jest-runner": "^27.5.1",
        "jest-environment-node": "27.5.1",
        "lint-staged": "^12.5.0",
        "module-alias": "^2.2.2",
        "rimraf": "^3.0.2",
        "supertest": "^6.2.3",
        "ts-jest": "^28.0.3",
        "typescript": "^4.7.2"
    },
    "dependencies": {
        "bcrypt": "^5.0.1",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "jsonwebtoken": "^8.5.1",
        "mongodb": "^4.7.0",
        "nodemon": "^2.0.16",
        "validator": "^13.7.0"
    }
}