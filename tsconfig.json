{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2021",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "esModuleInterop": true,
  },
  "include": [
    "./src/**/*",
    "./typings/*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}